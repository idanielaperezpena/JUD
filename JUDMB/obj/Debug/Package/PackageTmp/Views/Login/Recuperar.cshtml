@{
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}


<div class="login-box">
    <div class="login-logo">
        <b>INVI</b>CDMX
    </div>
    <form id="formulario_login">
        <div class="login-box-body">
            <p class="login-box-msg">Recuperar contraseña</p>
            <div class="form-group has-feedback">
                <input type="text" id="no_empleado" name="No_empleado" class="form-control" placeholder="Numero de empleado">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <p class="help-block">Se le enviara un correo con la contraseña</p>
            </div>
            <div class="row">
                <div class="col-xs-7 pull-right">
                    <button type="submit" id="btn_recuperar" class="btn btn-success btn-block btn-flat">Recuperar Contraseña</button>
                </div>
            </div>
            @Html.ActionLink("Regresar al Login", "Index", "Login")
        </div>
    </form>

</div>