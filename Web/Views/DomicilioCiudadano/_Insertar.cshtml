                </div>
                <div class="form-group  col-lg-6">
                    @Html.LabelFor(m => m.DOMC_IDEstado)
                    @Html.CustomDropDownListFor(m => m.DOMC_IDEstado, Model.Estado, new { @class = "form-control form-control-sm " })
                    @Html.ValidationMessageFor(m => m.DOMC_IDEstado, "")
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Latitud)
                    @Html.EditorFor(m => m.DOMC_Latitud, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(m => m.DOMC_Latitud, "")
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Longitud)
                    @Html.EditorFor(m => m.DOMC_Longitud, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(m => m.DOMC_Longitud, "")
                </div>
