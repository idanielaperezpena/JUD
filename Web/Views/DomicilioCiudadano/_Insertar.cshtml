                    @Html.EditorFor(m => m.DOMC_MontoRenta, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_IDTipoVivienda)
                    @Html.CustomDropDownListFor(m => m.DOMC_IDTipoVivienda, Model.TipoVivienda, new { @class = "form-control form-control-sm " })
                    @Html.ValidationMessageFor(m => m.DOMC_IDTipoVivienda, "")
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Otro)
                    @Html.TextAreaFor(m => m.DOMC_Otro,  new { @class = "form-control" } )
