                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_NombreVialidad)
                    @Html.EditorFor(m => m.DOMC_NombreVialidad, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(m => m.DOMC_NombreVialidad, "")
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_NumeroExterior)
                    @Html.EditorFor(m => m.DOMC_NumeroExterior, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
                <div class="form-group col-lg-6">
                    @Html.LabelFor(m => m.DOMC_NumeroInterior)
                    @Html.EditorFor(m => m.DOMC_NumeroInterior, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Manzana)
                    @Html.EditorFor(m => m.DOMC_Manzana, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
                <div class="form-group  col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Lote)
                    @Html.EditorFor(m => m.DOMC_Lote, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-lg-6">
                    @Html.LabelFor(m => m.DOMC_Colonia)
                    @Html.EditorFor(m => m.DOMC_Colonia, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(m => m.DOMC_Colonia, "")
                </div>
                <div class="form-group  col-lg-6">
                    @Html.LabelFor(m => m.DOMC_IDAlcaldia)
                    @Html.CustomDropDownListFor(m => m.DOMC_IDAlcaldia, Model.Alcaldia, new { @class = "form-control form-control-sm " })
                    @Html.ValidationMessageFor(m => m.DOMC_IDAlcaldia, "")
                </div>
            </div>

            <div class="row">
