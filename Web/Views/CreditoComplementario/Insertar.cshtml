@model Negocio.ViewModels.CreditoComplementario.CreditoComplementarioInsertarViewModel

@{
    Layout = "~/Views/Shared/_Layout-Principal.cshtml";

}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Crédito Complementario

            <small>Nueva Solicitud</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Crédito Complementario</a></li>
            <li class="active">X</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h1 class="box-title">Crédito Complementario.</h1>
                    </div>

                    @using (Html.BeginForm("Insertar"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box box-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CC_IDCreditoComplementario)
                            @Html.HiddenFor(model => model.CC_IDCreditoInicial)


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CC_FolioSolicitud)

                                        @Html.EditorFor(model => model.CC_FolioSolicitud, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.CC_FolioSolicitud, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CC_FechaSolicitud)

                                        @Html.TextBox("CC_FechaSolicitud", Model.CC_FechaSolicitud, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date", @class = "form-control form-control-sm datepicker" })
                                        @Html.ValidationMessageFor(model => model.CC_FechaSolicitud, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CC_NoSesionComite)

                                        @Html.EditorFor(model => model.CC_NoSesionComite, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.CC_NoSesionComite, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CC_IDMejoramiento)

                                        @Html.EditorFor(model => model.CC_IDMejoramiento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.CC_IDMejoramiento, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CC_Ingreso, htmlAttributes: new { @class = "control-label " })

                                        @Html.EditorFor(model => model.CC_Ingreso, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.CC_Ingreso, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-lg-6 ">
                                </div>
                                <div class="col-lg-6 ">
                                    <input type="submit" id="guardar" value="Guardar" class="btn btn-block btn-success btn-lg" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </section>
</div>
@section scripts
    {
    <script src="~/Scripts/Negocio/CreditoComplementario/NuevoCreditoComplementario.js"></script>


}