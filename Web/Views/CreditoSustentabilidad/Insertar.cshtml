@{
    ViewBag.Title = "Insertar";
    Layout = "~/Views/Shared/_Layout-Principal.cshtml";
}
@model Negocio.ViewModels.CreditoSustentabilidad.CreditoSustentabilidadInsertarViewModel


<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Crédito de Sustentabilidad

            <small>Nueva Solicitud</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#"> Crédito de Sustentabilidad</a></li>
            <li class="active">X</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h1 class="box-title"> Crédito de Sustentabilidad</h1>
                    </div>

                    @using (Html.BeginForm("Insertar"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box box-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CS_IDCreditoSustentabilidad)
                            @Html.HiddenFor(model => model.CS_IDCreditoInicial)


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CS_FolioSolicitud)

                                        @Html.EditorFor(model => model.CS_FolioSolicitud, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.CS_FolioSolicitud, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CS_FechaSolicitud)

                                        @Html.TextBox("CS_FechaSolicitud", Model.CS_FechaSolicitud, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date", @class = "form-control form-control-sm datepicker" })
                                        @Html.ValidationMessageFor(model => model.CS_FechaSolicitud, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                            </div>

                            

                           



                            <div class="row">
                                <div class="col-lg-6 ">
                                </div>
                                <div class="col-lg-6 ">
                                    <input type="submit" id="guardar" value="Guardar" class="btn btn-block btn-success btn-lg" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </section>
</div>
@section scripts
    {
    <script src="~/Scripts/Negocio/CreditoSustentabilidad/NuevoCreditoSustentabilidad.js"></script>
    }

