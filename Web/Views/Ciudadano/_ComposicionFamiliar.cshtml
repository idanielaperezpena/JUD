            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_IDEstructuraFamiliar)
                @Html.CustomDropDownListFor(m => m.CIU_IDEstructuraFamiliar, Model.EstructuraFamiliar, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.CIU_IDEstructuraFamiliar, "")
