                @Html.LabelFor(m => m.Trabajo.CIU_NombreTrabajo)
                @Html.EditorFor(m => m.Trabajo.CIU_NombreTrabajo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.Trabajo.CIU_NombreTrabajo, "")
