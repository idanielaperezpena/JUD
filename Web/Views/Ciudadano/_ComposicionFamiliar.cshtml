                @Html.LabelFor(m => m.CIU_IDEnfermedadCronica)
                @Html.CustomDropDownListFor(m => m.CIU_IDEnfermedadCronica, Model.EnfermedadCronica, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.CIU_IDEnfermedadCronica, "")
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_EnfermedadCronicaOtro)
                @Html.EditorFor(m => m.CIU_EnfermedadCronicaOtro, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.CIU_EnfermedadCronicaOtro, "")
            </div>

        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_IDDiscapacidad)
                @Html.CustomDropDownListFor(m => m.CIU_IDDiscapacidad, Model.Discapacidad, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.CIU_IDDiscapacidad, "")
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_DiscapacidadOtro)
                @Html.EditorFor(m => m.CIU_DiscapacidadOtro, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.CIU_DiscapacidadOtro, "")
