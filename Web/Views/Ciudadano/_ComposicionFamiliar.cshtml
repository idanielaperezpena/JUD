            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_IngresoFamiliar)
                @Html.EditorFor(m => m.CIU_IngresoFamiliar, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.CIU_IngresoFamiliar, "")
            </div>


        </div>

        <!-- /.box-body -->
    </div>

    @* Trabajo *@
