        <div class="row">
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.CIU_IDOrganizacionCivilFamilia)
                @Html.CustomDropDownListFor(m => m.CIU_IDOrganizacionCivilFamilia, Model.OrganizacionCivilFamilia, new { @class = "form-control form-control-sm " })
