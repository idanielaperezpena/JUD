@{
    Layout = "~/Views/Shared/_Layout-Principal.cshtml";

}
<div  class="content-wrapper">
    <section class="content-header">
        <h1>
            Ciudadano

            <small>Datos Personales</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Ciudadano</a></li>
            <li class="active">Solicitud</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <form role="form">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h1 class="box-title">1. Datos de la (el) Solicitante.</h1>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label for="CIU_CURP">CURP*:</label>
                                <input type="text" class="form-control" id="CIU_CURP">
                            </div>
                            <div class="form-group">
                                <label for="CIU_Nombre">Nombre*:</label>
                                <input type="text" class="form-control" id="CIU_Nombre">
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_ApellidoPaterno">Apellido Paterno*:</label>
                                    <input type="text" class="form-control" id="CIU_ApellidoPaterno">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_ApellidoMaterno">Apellido Materno:</label>
                                    <input type="text" class="form-control" id="CIU_ApellidoMaterno">
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_NumeroIdentificacion">No. de Identificación*: </label>
                                    <input type="text" class="form-control" id="CIU_NumeroIdentificacion">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDGenero">Género*: </label>
                                    <select class="form-control" id="CIU_IDGenero"></select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group  col-lg-6">
                                    <label for="CIU_FechaNacimiento">Fecha de Nacimiento*:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control" id="CIU_FechaNacimiento">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_Estado">Entidad de Nacimiento*: </label>
                                    <select class="form-control" id="CIU_Estado" required></select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_TiempoResidencia">Tiempo de Residencia en la CDMX*: </label>
                                    <input type="number" class="form-control" id="CIU_TiempoResidencia">
                                    <p class="help-block">Tiempo en años.</p>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDGradoEstudios">Grado Máximo de Estudios*: </label>
                                    <select class="form-control" id="CIU_IDGradoEstudios"></select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_GrupoEtnico">Grupo Étnico*: </label>
                                    <select class="form-control" id="CIU_GrupoEtnico"></select>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDEstadoCivil">Estado Civil*: </label>
                                    <select class="form-control" id="CIU_IDEstadoCivil"></select>
                                </div>

                            </div>
                        </div>
                        <!-- /.box-body -->



                        <div class="box-header with-border">
                            <h3 class="box-title">Datos de Contacto</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_TelParticular">Tel. Particular*:</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input type="text" class="form-control" id="CIU_TelParticular">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_TelTrabajo">Tel. Trabajo:</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input type="text" class="form-control" id="CIU_TelRecados">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_TelCelular">Tel. Celular:</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input type="text" class="form-control" id="CIU_TelCelular">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_TelRecados">Tel. Recados:</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input type="text" class="form-control" id="CIU_TelRecados">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="CIU_CorreoElectronico">Correo Electrónico:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa  fa-envelope"></i>
                                    </div>
                                    <input type="text" class="form-control" id="CIU_CorreoElectronico">
                                </div>
                            </div>


                        </div>
                        <!-- /.box-body -->
                    </div>
                    @* 2. Pareja *@
                    @Html.Partial("../Pareja/Insertar")
                    @*3. Domicilio del credito y del solicitante *@
                    @Html.Partial("../DomicilioCiudadano/Insertar")
                    @* 4.CREDITOS OROTGADOS *@
                    <div class=" box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">4. Solución y Créditos Otorgados. </h3>
                        </div>
                        <div class="box-body">

                            <div class="form-group">
                                <label for="CIU_Proposito">Solución a la que aspira el solicitante con el otorgamiento del crédito:</label>
                                <textarea class="form-control" id="CIU_Proposito"></textarea>
                            </div>


                            <div class="form-group">
                                <label for="CIU_CréditosOtorgados">¿En el lote se ha(n) otorgado crédito(s) del INVI?:</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="OptionsCreditosOtorgados" id="CIU_Proposito1" value=1>
                                        Sí
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="OptionsCreditosOtorgados" id="CIU_Proposito2" value=0>
                                        No
                                    </label>
                                </div>
                            </div>

                            <!-- /.box-body -->
                        </div>

                    </div>



                </div>

                <div class="col-md-6">


                    @* 5. COMPOSICIÓN FAMILIAR *@
                    <div class=" box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">5. Composición familiar de la (el) solicitante. </h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="form-group col-lg-6">

                                    <label for="CIU_IDOrganizacionCivilFamilia">Condiciones de la organización civil de la familia.</label>
                                    <select class="form-control" id="CIU_IDOrganizacionCivilFamilia"></select>

                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDEstructuraFamiliar">Estructura Familiar*: </label>
                                    <select class="form-control" id="CIU_IDEstructuraFamiliar"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDEnfermedadCronica">Enfermedad Crónica*: </label>
                                    <select class="form-control" id="CIU_IDEnfermedadCronica"></select>

                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_EnfermedadCronicaOtro">Otra: </label>
                                    <input type="text" class="form-control" id="CIU_EnfermedadCronicaOtro">
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDDiscapacidad">Discapacidad*: </label>
                                    <select class="form-control" id="CIU_IDDiscapacidad"></select>

                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_DiscapacidadOtro">Otra: </label>
                                    <input type="text" class="form-control" id="CIU_DiscapacidadOtro">
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDGruposPrioritarios">GruposPrioritarios*: </label>
                                    <select class="form-control" id="CIU_IDGruposPrioritarios"></select>

                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IngresoFamiliar">Ingreso Familiar*: </label>
                                    <input type="number" class="form-control" id="CIU_IngresoFamiliar" />

                                </div>


                            </div>

                            <!-- /.box-body -->
                        </div>

                        @* Trabajo *@
                        <div class="box-header with-border">
                            <h3 class="box-title">Datos laborales </h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="CIU_IDOcupacion">Ocupación*: </label>
                                    <select class="form-control" id="CIU_IDOcupacion"></select>

                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="CIU_NombreTrabajo">Dependencia, empresa o negocio: </label>
                                    <input type="text" class="form-control" id="CIU_NombreTrabajo" />

                                </div>


                            </div>

                        </div>
                    </div>
                    @Html.Partial("../Domicilio/Insertar")

                    @* Deudor solidario *@
                    @Html.Partial("../DeudorSolidario/Insertar")
                    @* 7. Capacidad de pago del solicitante *@
                    <div class=" box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">7. Capacidad de pago del solicitante. </h3>
                        </div>
                        <div class="box-body">

                            <div class="form-group">
                                <label for="CIU_CapacidadPago">
                                    De su ingreso familiar mensual,
                                    <br />  ¿Cuánto podrá destinar para el pago del crédito?*:
                                </label>
                                <input type="number" class="form-control" id="CIU_CapacidadPago" />

                            </div>



                        </div>
                    </div>
                </div>
                

            </div>

            <div class="row">
                <div class="col-lg-6 ">
                    </div  >
                    <div class="col-lg-6 ">

                        <button type="button" class="btn btn-block btn-success btn-lg">Guardar</button>
                    </div>
                </div>


</form>
    </section>
</div>
