
<div class="box box-success">
    <div class="box-header with-border">
        <h1 class="box-title">6. Datos de la (el) Deudor Solidario.</h1>
    </div>
    <div class="box-body">
        <div class="form-group">
            <label for="DEU_CURP">CURP*:</label>
            <input type="text" class="form-control" id="DEU_CURP">
        </div>
        <div class="form-group">
            <label for="DEU_Nombre">Nombre*:</label>
            <input type="text" class="form-control" id="DEU_Nombre">
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label for="DEU_ApellidoPaterno">Apellido Paterno*:</label>
                <input type="text" class="form-control" id="DEU_ApellidoPaterno">
            </div>
            <div class="form-group col-lg-6">
                <label for="DEU_ApellidoMaterno">Apellido Materno:</label>
                <input type="text" class="form-control" id="DEU_ApellidoMaterno">
            </div>
        </div>


        <div class="row">

            <div class="form-group col-lg-6">
                <label for="DEU_IDGenero">Género*: </label>
                <select class="form-control" id="DEU_IDGenero"></select>
            </div>
            <div class="form-group col-lg-6">
                <label for="DEU_IDEstadoCivil">Estado Civil*: </label>
                <select class="form-control" id="DEU_IDEstadoCivil"></select>
            </div>
        </div>



    </div>
    <!-- /.box-body -->

    <div class="box-header with-border">
        <h3 class="box-title">Datos de Contacto</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="form-group col-lg-6">
                <label for="DEU_TelParticular">Tel. Particular*:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <input type="text" class="form-control" id="DEU_TelParticular">
                </div>
            </div>

        </div>




    </div>
    <!-- /.box-body -->
    @*3. Domicilio del credito y del solicitante *@
    @Html.Partial("../Domicilio/Insertar")


    @* Trabajo *@
    <div class="box-header with-border">
        <h3 class="box-title">Datos laborales </h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="form-group col-lg-6">
                <label for="DEU_IDProfesion">Ocupación*: </label>
                <select class="form-control" id="DEU_IDProfesion"></select>

            </div>
            <div class="form-group col-lg-6">
                <label for="DEU_NombreTrabajo">Dependencia, empresa o negocio: </label>
                <input type="text" class="form-control" id="DEU_NombreTrabajo" />

            </div>


        </div>
        
            @Html.Partial("../Domicilio/Insertar")
        
        <div class="row">

            <div class="form-group col-lg-6">
                <label for="DEU_Ingreso">Ingreso familiar mensual*: </label>
                <input type="number" class="form-control" id="DEU_Ingreso" />

            </div>
            <div class="form-group col-lg-6">
                <label for="DEU_CapacidadPago">
                    De su ingreso familiar mensual,
                    <br />  ¿Cuánto podrá destinar para el pago del crédito?*:
                </label>
                <input type="number" class="form-control" id="DEU_CapacidadPago" />

            </div>

        </div>

    </div>
</div>


