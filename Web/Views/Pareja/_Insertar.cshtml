

@model Negocio.ViewModels.Ciudadanos.CiudadanoParejaViewModel

<div class="box box-success">
    <div class="box-header with-border">
        <h1 class="box-title">2. Datos de la (el) cónyuge, concubina (rio) o pareja de la (el) solicitante.</h1>
    </div>

    <div class="box-body">

        <div class="form-group">
            @Html.LabelFor(m => m.PAR_Nombre)
            @Html.EditorFor(m => m.PAR_Nombre, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(m => m.PAR_Nombre, "")
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.PAR_ApellidoPaterno)
                @Html.EditorFor(m => m.PAR_ApellidoPaterno, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.PAR_ApellidoPaterno, "")
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.PAR_ApellidoMaterno)
                @Html.EditorFor(m => m.PAR_ApellidoMaterno, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.PAR_ApellidoMaterno, "")
            </div>
        </div>


        <div class="row">

            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.PAR_IDGenero)
                @Html.CustomDropDownListFor(m => m.PAR_IDGenero, Model.Genero, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.PAR_IDGenero, "")
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.PAR_IDRegimen)
                @Html.CustomDropDownListFor(m => m.PAR_IDRegimen, Model.RegimenPatrimonial, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.PAR_IDRegimen, "")
            </div>

        </div>
        <div class="row">
            <div class="form-group  col-lg-6">
                @Html.LabelFor(m => m.PAR_FechaNacimiento)
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.EditorFor(m => m.PAR_FechaNacimiento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
                @Html.ValidationMessageFor(m => m.PAR_FechaNacimiento, "")
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(m => m.PAR_IDEstado)
                @Html.CustomDropDownListFor(m => m.PAR_IDEstado, Model.Estado, new { @class = "form-control form-control-sm " })
                @Html.ValidationMessageFor(m => m.PAR_IDEstado, "")
            </div>

        </div>


    </div>

 </div>
<!-- /.box-body -->
