@model Negocio.ViewModels.DictamenJuridico.DictamenJuridicoViewModel

@{
    ViewBag.Title = "Dictamen Juridico";
    Layout = "~/Views/Shared/_Layout-Principal.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Dictamen Jurídico
            <small>Solicitud</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Dictamen Jurídico</a></li>

        </ol>
    </section>

    <section class="content">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="box box-success">
                <div class="box-header with-border">
                    <h1 class="box-title">Dictamen Jurídico</h1>
                </div>
                <div class="box-body">



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.TipoCredito)
                    @Html.HiddenFor(model => model.IDDictamenJuridico)
                    @Html.HiddenFor(model => model.IDCredito)


                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPropiedad)

                                @Html.CustomDropDownListFor(model => model.IDPropiedad, Model.TipoPropiedad, new { @class = "form-control form-control-sm " })
                                @Html.ValidationMessageFor(model => model.IDPropiedad, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDPosesion)

                                @Html.CustomDropDownListFor(model => model.IDPosesion, Model.TipoPosesion, new { @class = "form-control form-control-sm " })
                                @Html.ValidationMessageFor(model => model.IDPosesion, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoDocumentoPropiedad)

                                @Html.EditorFor(model => model.NoDocumentoPropiedad, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NoDocumentoPropiedad, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaDocumento)

                                @Html.TextBoxFor(model => model.FechaDocumento, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date", @class = "form-control form-control-sm" })
                                @Html.ValidationMessageFor(model => model.FechaDocumento, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>




                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Anuencia)
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(model => model.Anuencia, true)
                                        Sí
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(model => model.Anuencia, false)
                                        No
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(model => model.Anuencia, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SuperficieLote)

                                @Html.EditorFor(model => model.SuperficieLote, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.SuperficieLote, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>



                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DatosLibro)

                                @Html.EditorFor(model => model.DatosLibro, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DatosLibro, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FolioDocumento)

                                @Html.EditorFor(model => model.FolioDocumento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FolioDocumento, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Observaciones)

                                @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Procedencia)

                                @Html.CustomDropDownListFor(model => model.Procedencia, Model.Dictaminacion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Procedencia, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MotivosProcedencia)

                                @Html.TextAreaFor(model => model.MotivosProcedencia, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MotivosProcedencia, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaDictaminacion)

                                @Html.TextBoxFor(model => model.FechaDictaminacion, "{0:yyyy-MM-dd}", new { @style = "width:100%", type = "date", @class = "form-control form-control-sm" })
                                @Html.ValidationMessageFor(model => model.FechaDictaminacion, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-6 "> </div>
                        <div class="col-lg-6 ">
                            <input type="submit" id="guardar" value="Guardar" class="btn btn-block btn-success btn-lg" />
                        </div>
                    </div>
                </div>
            </div>



        }
    </section>
</div>

@section scripts{

    <script src="~/Scripts/Negocio/Dictamenes/NuevoDictamenJuridico.js"></script>
}
















