@model Negocio.ViewModels.DictamenFinanciero.DictamenFinancieroViewModel

@{
    ViewBag.Title = "Dictamen Financiero";
    Layout = "~/Views/Shared/_Layout-Principal.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Dictamen Financiero
            <small>Solicitud</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Dictamen Financiero</a></li>
           
        </ol>
    </section>

    <section class="content">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="box box-success">
                <div class="box-header with-border">
                    <h1 class="box-title">Dictamen Financiero</h1>
                </div>
                <div class="box-body">



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.TipoCredito)
                    @Html.HiddenFor(model => model.IDDictamenFinanciero)
                    @Html.HiddenFor(model => model.IDCreditoInicial)


                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Procedencia)

                                @Html.CustomDropDownListFor(model => model.Procedencia, Model.Dictaminacion, new { @class = "form-control form-control-sm " })
                                @Html.ValidationMessageFor(model => model.Procedencia, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MotivosProcedencia)

                                @Html.TextAreaFor(model => model.MotivosProcedencia, new { @class = "form-control form-control-sm" })
                                @Html.ValidationMessageFor(model => model.MotivosProcedencia, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoMontoCredito)

                                @Html.EditorFor(model => model.NoMontoCredito, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NoMontoCredito, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoMesesAmortizacion)

                                @Html.EditorFor(model => model.NoMesesAmortizacion, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NoMesesAmortizacion, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>




                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDUMA)

                                @Html.EditorFor(model => model.IDUMA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.IDUMA, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NoPagoUMA)

                                @Html.EditorFor(model => model.NoPagoUMA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NoPagoUMA, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>



                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FechaDictaminacion)

                                @Html.EditorFor(model => model.FechaDictaminacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaDictaminacion, "", new { @class = "text-danger" })

                            </div>
                        </div>
                  
                    </div>

                   



                    <div class="row">
                        <div class="col-lg-6 "> </div>
                            <div class="col-lg-6 ">
                                <input type="submit" id="guardar" value="Guardar" class="btn btn-block btn-success btn-lg" />
                            </div>
                        </div>
                    </div>
            </div>


                  
        }
        </section>
</div>


       

        
